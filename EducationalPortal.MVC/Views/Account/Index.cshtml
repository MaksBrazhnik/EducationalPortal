@model EducationalPortal.MVC.Models.UserUpdateModel

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="number" hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"><h3>@Model.Name</h3></label>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FamilyName" class="control-label"><h3>@Model.FamilyName</h3></label>
                <span asp-validation-for="FamilyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"><h3>@Model.Email</h3></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </form> 
        <h4>My skills</h4>
        <table class="table">
            <tr><th>Name</th><th>Level</th></tr>
            @foreach (var item in Model.UserSkills)
            {
                <tr>
                    <td>@item.Skill.Name</td>
                    <td>@item.Level</td>                    
                </tr>
            }
        </table>
    </div>    
</div>
<form asp-controller="Account" asp-action="ShowCourses" method="get" asp-route-id="@Model.Id">
    <input type="submit" class="btn btn-primary" value="My courses" />
</form>
<br></br>
<div >
    <a class="btn btn-primary" asp-action="Index" asp-controller="User">Change my data</a>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }